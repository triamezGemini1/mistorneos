# Redirigir todas las peticiones a /public (la URL no mostrará "public")
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Si el servidor está en un subdirectorio (ej. /mistorneos), descomenta y ajusta:
    # RewriteBase /mistorneos/

    # Bloquear acceso directo a archivos sensibles
    RewriteRule ^\.env - [F,L]
    RewriteRule ^config/ - [F,L]
    RewriteRule ^vendor/ - [F,L]

    # Enviar el resto de peticiones a la carpeta public/ (sin mostrar "public" en la URL)
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>
