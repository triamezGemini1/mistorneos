# =====================================================
# MIS TORNEOS - Configuración unificada (desarrollo + producción)
# =====================================================
# Copiar a .env y ajustar valores. Un solo archivo, selector por ámbito.

# -----------------------------------------------------
# SELECTOR DE ÁMBITO (cambiar según donde trabajes)
# -----------------------------------------------------
# development = usa variables DB_DEV_* (local, WAMP, etc.)
# production   = usa variables DB_PROD_* (servidor real)
APP_ENV=development

APP_DEBUG=true
APP_URL=http://localhost/mistorneos/public

# Redirigir siempre a HTTPS en producción (true). Pon false para no forzar HTTPS.
# FORCE_HTTPS=false

# =====================================================
# BASE DE DATOS - DESARROLLO (local, WAMP/XAMPP)
# =====================================================
# Se usan cuando APP_ENV=development
DB_DEV_HOST=localhost
DB_DEV_PORT=3306
DB_DEV_DATABASE=mistorneos
DB_DEV_USERNAME=root
DB_DEV_PASSWORD=

# Conexión secundaria (opcional) - desarrollo
DB_DEV_SECONDARY_HOST=localhost
DB_DEV_SECONDARY_PORT=3306
DB_DEV_SECONDARY_DATABASE=fvdadmin
DB_DEV_SECONDARY_USERNAME=root
DB_DEV_SECONDARY_PASSWORD=

# =====================================================
# BASE DE DATOS - PRODUCCIÓN (servidor)
# =====================================================
# Se usan cuando APP_ENV=production
DB_PROD_HOST=localhost
DB_PROD_PORT=3306
DB_PROD_DATABASE=laestaci1_mistorneos
DB_PROD_USERNAME=laestaci1_admin
DB_PROD_PASSWORD=tu_password_produccion

# Conexión secundaria (opcional) - producción
DB_PROD_SECONDARY_HOST=localhost
DB_PROD_SECONDARY_PORT=3306
DB_PROD_SECONDARY_DATABASE=fvdadmin
DB_PROD_SECONDARY_USERNAME=
DB_PROD_SECONDARY_PASSWORD=

# =====================================================
# Compatibilidad: si no usas prefijos DEV/PROD, estas
# variables se usan como respaldo (opcional)
# =====================================================
# DB_HOST=localhost
# DB_DATABASE=mistorneos
# DB_USERNAME=root
# DB_PASSWORD=

# =====================================================
# EMAIL (SMTP)
# =====================================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@tudominio.com
MAIL_FROM_NAME=Mis Torneos

# =====================================================
# TELEGRAM (Notificaciones)
# =====================================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_BOT_USERNAME=
NOTIFICATIONS_CRON_KEY=

# =====================================================
# SEGURIDAD
# =====================================================
# APP_KEY: Obligatorio en producción. Usado para tokens QR de hojas de anotación y CSRF.
# Si está vacío, se usa una clave por defecto (solo desarrollo).
APP_KEY=
# SYNC_API_KEY: Token para que la app de escritorio lea api_fetch_jugadores.php (sincronización Offline-First).
SYNC_API_KEY=
SESSION_LIFETIME=120
RATE_LIMIT_LOGIN=5
